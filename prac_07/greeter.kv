
BoxLayout:
    orientation: 'horizontal'


    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 50
        Button:
            text: 'Clear'
            id: clear_button
            on_press: app.clear_fields()
        Button:
            text: 'Greet'
            on_press: app.handle_greet()

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 200
        Label:
            text: 'Enter your name'
            colour: (0, 1, 1, 0)
            id: output_label
        TextInput:
            id: input_name
            text: ''
            colour: (1, 1, 1, 1)